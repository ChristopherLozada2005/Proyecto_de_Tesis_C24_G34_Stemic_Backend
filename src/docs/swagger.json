{
  "openapi": "3.0.0",
  "info": {
    "title": "API STEMIC",
    "version": "1.0.0",
    "description": "Documentación de la API STEMIC con soporte para Cloudinary"
  },
  "paths": {
    "/api/auth/forgot-password": {
      "post": {
        "summary": "Solicitar recuperación de contraseña",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "correo": { "type": "string", "format": "email" }
                },
                "required": ["correo"]
              },
              "example": {
                "correo": "usuario@ejemplo.com"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Si el correo existe, se envió un email con instrucciones" },
          "400": { "description": "Correo requerido" },
          "500": { "description": "Error interno del servidor" }
        }
      }
    },
    "/api/auth/reset-password": {
      "post": {
        "summary": "Restablecer contraseña usando token",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": { "type": "string" },
                  "password": { "type": "string", "format": "password" }
                },
                "required": ["token", "password"]
              },
              "example": {
                "token": "token_recibido_por_email",
                "password": "NuevaPassword123"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Contraseña restablecida correctamente" },
          "400": { "description": "Token inválido, expirado o contraseña insegura" },
          "500": { "description": "Error interno del servidor" }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "summary": "Registrar un nuevo usuario",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nombre": { "type": "string" },
                  "correo": { "type": "string", "format": "email" },
                  "password": { "type": "string", "format": "password" },
                  "confirmPassword": { "type": "string", "format": "password" }
                },
                "required": ["nombre", "correo", "password"]
              },
              "example": {
                "nombre": "Juan Perez",
                "correo": "juan@mail.com",
                "password": "ABcd1234",
                "confirmPassword": "ABcd1234"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuario registrado exitosamente" },
          "409": { "description": "El correo electrónico ya está registrado" },
          "500": { "description": "Error interno del servidor" }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "Iniciar sesión",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "correo": { "type": "string", "format": "email" },
                  "password": { "type": "string", "format": "password" }
                },
                "required": ["correo", "password"]
              },
              "example": {
                "correo": "juan@mail.com",
                "password": "ABcd1234"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Inicio de sesión exitoso" },
          "401": { "description": "Credenciales inválidas" },
          "500": { "description": "Error interno del servidor" }
        }
      }
    },
    "/api/auth/google": {
      "post": {
        "summary": "Autenticación con Google",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": { "type": "string" }
                },
                "required": ["token"]
              },
              "example": {
                "token": "eyJhbGciOiJSUzI1NiIsImtpZCI6Ij..."
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Autenticación exitosa" },
          "409": { "description": "Ya existe una cuenta con este correo" },
          "401": { "description": "Token de Google inválido" },
          "500": { "description": "Error interno del servidor" }
        }
      }
    },
    "/api/auth/refresh-token": {
      "post": {
        "summary": "Refrescar token de acceso",
        "tags": ["Auth"],
        "description": "Genera un nuevo token de acceso usando el refresh token almacenado en las cookies",
        "requestBody": {
          "required": false,
          "description": "El refresh token se toma automáticamente de las cookies HttpOnly"
        },
        "responses": {
          "200": {
            "description": "Nuevo token generado exitosamente",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "data": {
                    "accessToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
                    "user": {
                      "id": "123e4567-e89b-12d3-a456-426614174000",
                      "nombre": "Juan Pérez",
                      "correo": "juan@mail.com",
                      "rol": "usuario"
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Refresh token inválido o expirado" },
          "500": { "description": "Error interno del servidor" }
        }
      }
    },
    "/api/auth/logout": {
      "post": {
        "summary": "Cerrar sesión",
        "tags": ["Auth"],
        "description": "Invalida el refresh token y limpia las cookies de sesión",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Sesión cerrada exitosamente",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "message": "Sesión cerrada exitosamente"
                }
              }
            }
          },
          "401": { "description": "No autorizado" },
          "500": { "description": "Error interno del servidor" }
        }
      }
    },
    "/api/auth/profile": {
      "get": {
        "summary": "Obtener perfil completo del usuario autenticado",
        "tags": ["Auth - Profile"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Perfil obtenido correctamente",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "data": {
                    "nombre": "Juan Pérez",
                    "correo": "juan@mail.com",
                    "avatar_url": "https://res.cloudinary.com/demo/image/upload/v123/stemic/profiles/avatar123.jpg",
                    "gender": "masculino",
                    "phone_number": "+502 1234-5678",
                    "birth_date": "1995-06-15",
                    "description": "Desarrollador apasionado por la tecnología",
                    "interests": ["ia", "tech"],
                    "user_created_at": "2024-01-15T10:30:00Z",
                    "profile_updated_at": "2024-02-20T14:45:00Z"
                  }
                }
              }
            }
          },
          "401": { "description": "No autorizado" },
          "500": { "description": "Error interno del servidor" }
        }
      },
      "put": {
        "summary": "Actualizar perfil del usuario autenticado",
        "tags": ["Auth - Profile"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "avatar": {
                    "type": "string",
                    "format": "binary",
                    "description": "Archivo de imagen para el avatar (JPEG, PNG, WebP) - máx 5MB"
                  },
                  "gender": { 
                    "type": "string", 
                    "enum": ["masculino", "femenino", "otro", "prefiero_no_decir"]
                  },
                  "phone_number": { 
                    "type": "string",
                    "description": "Número telefónico (7-20 caracteres)"
                  },
                  "birth_date": { 
                    "type": "string", 
                    "format": "date",
                    "description": "Fecha de nacimiento (mínimo 13 años)"
                  },
                  "description": { 
                    "type": "string",
                    "description": "Descripción personal (máximo 1000 caracteres)"
                  },
                  "interests": { 
                    "type": "array", 
                    "items": { "type": "string" },
                    "description": "Intereses: ia, tech, networking"
                  }
                }
              }
            },
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "avatar_url": { 
                    "type": "string", 
                    "format": "uri",
                    "description": "URL del avatar (alternativa a subir archivo)"
                  },
                  "gender": { 
                    "type": "string", 
                    "enum": ["masculino", "femenino", "otro", "prefiero_no_decir"]
                  },
                  "phone_number": { 
                    "type": "string",
                    "description": "Número telefónico"
                  },
                  "birth_date": { 
                    "type": "string", 
                    "format": "date"
                  },
                  "description": { 
                    "type": "string"
                  },
                  "interests": { 
                    "type": "array", 
                    "items": { "type": "string", "enum": ["ia", "tech", "networking"] }
                  }
                }
              },
              "example": {
                "avatar_url": "https://example.com/avatar.jpg",
                "gender": "masculino",
                "phone_number": "+502 1234-5678",
                "birth_date": "1995-06-15",
                "description": "Desarrollador apasionado por la tecnología",
                "interests": ["ia", "tech"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Perfil actualizado exitosamente" },
          "400": { "description": "Errores de validación" },
          "401": { "description": "No autorizado" },
          "500": { "description": "Error interno del servidor" }
        }
      }
    },
    "/api/auth/profile/options": {
      "get": {
        "summary": "Obtener opciones disponibles para el perfil",
        "tags": ["Auth - Profile"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Opciones obtenidas correctamente",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "data": {
                    "genders": [
                      { "value": "masculino", "label": "Masculino" },
                      { "value": "femenino", "label": "Femenino" },
                      { "value": "otro", "label": "Otro" },
                      { "value": "prefiero_no_decir", "label": "Prefiero no decir" }
                    ],
                    "interests": [
                      { "value": "ia", "label": "Inteligencia Artificial" },
                      { "value": "tech", "label": "Tecnología" },
                      { "value": "networking", "label": "Networking" }
                    ]
                  }
                }
              }
            }
          },
          "401": { "description": "No autorizado" },
          "500": { "description": "Error interno del servidor" }
        }
      }
    },
    "/api/events/options": {
      "get": {
        "summary": "Obtener opciones para formularios de eventos",
        "tags": ["Events - Público"],
        "responses": {
          "200": {
            "description": "Opciones obtenidas correctamente",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "data": {
                    "skills": [
                      {"value": "Liderazgo", "label": "Liderazgo"},
                      {"value": "Pensamiento Critico", "label": "Pensamiento Crítico"},
                      {"value": "Colaboracion", "label": "Colaboración"},
                      {"value": "Conocimiento Tecnico", "label": "Conocimiento Técnico"},
                      {"value": "Comunicacion", "label": "Comunicación"}
                    ],
                    "tags": ["IA", "TECH", "NETWORKING"],
                    "modalidades": ["virtual", "presencial", "hibrido"]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/events/public": {
      "get": {
        "summary": "Obtener eventos públicos con filtros",
        "tags": ["Events - Público"],
        "parameters": [
          {
            "name": "modalidad",
            "in": "query",
            "schema": { "type": "string", "enum": ["virtual", "presencial", "hibrido"] }
          },
          {
            "name": "search",
            "in": "query",
            "schema": { "type": "string" },
            "description": "Buscar en título y descripción"
          },
          {
            "name": "page",
            "in": "query",
            "schema": { "type": "integer", "default": 1 }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": { "type": "integer", "default": 10, "maximum": 100 }
          }
        ],
        "responses": {
          "200": { "description": "Eventos obtenidos correctamente" }
        }
      }
    },
    "/api/events": {
      "post": {
        "summary": "Crear nuevo evento",
        "tags": ["Events - Protegido"],
        "security": [{ "bearerAuth": [] }],
        "description": "Solo usuarios con rol 'organizador' o 'admin' pueden crear eventos",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "imagen": {
                    "type": "string",
                    "format": "binary",
                    "description": "Imagen del evento (JPEG, PNG, WebP) - máx 10MB"
                  },
                  "titulo": { "type": "string", "minLength": 3 },
                  "descripcion": { "type": "string", "minLength": 10 },
                  "fecha_aplicacion_prioritaria": { "type": "string", "format": "date" },
                  "fecha_aplicacion_general": { "type": "string", "format": "date" },
                  "duracion": { 
                    "type": "string", 
                    "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]$",
                    "description": "Duración en formato HH:MM:SS"
                  },
                  "correo_contacto": { "type": "string", "format": "email" },
                  "informacion_adicional": { "type": "string" },
                  "skills": { 
                    "type": "array", 
                    "items": { "type": "string" }
                  },
                  "tags": { "type": "array", "items": { "type": "string" } },
                  "modalidad": { "type": "string", "enum": ["virtual", "presencial", "hibrido"] },
                  "lugar": { "type": "string" },
                  "fecha_hora": { "type": "string", "format": "date-time" },
                  "requiere_postulacion": { "type": "boolean", "default": false }
                },
                "required": ["titulo", "descripcion", "fecha_aplicacion_prioritaria", "fecha_aplicacion_general", "duracion", "correo_contacto", "modalidad", "fecha_hora"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Evento creado exitosamente" },
          "400": { "description": "Errores de validación" },
          "401": { "description": "No autorizado - Token requerido" },
          "403": { "description": "Acceso denegado - Se requiere rol organizador o admin" }
        }
      },
      "get": {
        "summary": "Obtener todos los eventos",
        "tags": ["Events - Público"],
        "responses": {
          "200": { "description": "Eventos obtenidos correctamente" },
          "401": { "description": "No autorizado" }
        }
      }
    },
    "/api/events/{id}": {
      "get": {
        "summary": "Obtener evento específico",
        "tags": ["Events - Público"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": { "description": "Evento encontrado" },
          "404": { "description": "Evento no encontrado" },
          "401": { "description": "No autorizado" }
        }
      },
      "put": {
        "summary": "Actualizar evento",
        "tags": ["Events - Protegido"],
        "security": [{ "bearerAuth": [] }],
        "description": "Solo usuarios con rol 'organizador' o 'admin' pueden actualizar eventos. Solo el creador puede modificar su propio evento.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "imagen": {
                    "type": "string",
                    "format": "binary",
                    "description": "Nueva imagen del evento (opcional)"
                  },
                  "titulo": { "type": "string", "minLength": 3 },
                  "descripcion": { "type": "string", "minLength": 10 },
                  "fecha_aplicacion_prioritaria": { "type": "string", "format": "date" },
                  "fecha_aplicacion_general": { "type": "string", "format": "date" },
                  "duracion": { 
                    "type": "string", 
                    "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]$",
                    "description": "Duración en formato HH:MM:SS"
                  },
                  "correo_contacto": { "type": "string", "format": "email" },
                  "informacion_adicional": { "type": "string" },
                  "skills": { 
                    "type": "array", 
                    "items": { "type": "string" },
                    "description": "Skills del evento"
                  },
                  "tags": { 
                    "type": "array", 
                    "items": { "type": "string" },
                    "description": "Tags del evento"
                  },
                  "modalidad": { "type": "string", "enum": ["virtual", "presencial", "hibrido"] },
                  "lugar": { "type": "string" },
                  "fecha_hora": { "type": "string", "format": "date-time" },
                  "requiere_postulacion": { "type": "boolean" },
                  "activo": { "type": "boolean", "description": "Estado del evento" }
                }
              }
            },
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "titulo": { "type": "string" },
                  "descripcion": { "type": "string" },
                  "fecha_aplicacion_prioritaria": { "type": "string", "format": "date" },
                  "fecha_aplicacion_general": { "type": "string", "format": "date" },
                  "duracion": { "type": "string" },
                  "correo_contacto": { "type": "string", "format": "email" },
                  "informacion_adicional": { "type": "string" },
                  "skills": { "type": "array", "items": { "type": "string" } },
                  "tags": { "type": "array", "items": { "type": "string" } },
                  "modalidad": { "type": "string", "enum": ["virtual", "presencial", "hibrido"] },
                  "lugar": { "type": "string" },
                  "fecha_hora": { "type": "string", "format": "date-time" },
                  "requiere_postulacion": { "type": "boolean" },
                  "activo": { "type": "boolean" }
                }
              },
              "example": {
                "titulo": "Evento Actualizado",
                "descripcion": "Nueva descripción del evento",
                "modalidad": "hibrido",
                "lugar": "Auditorio Central + Zoom"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Evento actualizado exitosamente" },
          "400": { "description": "Errores de validación" },
          "401": { "description": "No autorizado - Token requerido" },
          "403": { "description": "Acceso denegado - Se requiere rol organizador/admin y ser el creador" },
          "404": { "description": "Evento no encontrado" }
        }
      },
      "delete": {
        "summary": "Eliminar evento",
        "tags": ["Events - Protegido"],
        "security": [{ "bearerAuth": [] }],
        "description": "Solo usuarios con rol 'organizador' o 'admin' pueden eliminar eventos. Solo el creador puede eliminar su propio evento.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": { "description": "Evento eliminado exitosamente" },
          "401": { "description": "No autorizado - Token requerido" },
          "403": { "description": "Acceso denegado - Se requiere rol organizador/admin y ser el creador" },
          "404": { "description": "Evento no encontrado" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}